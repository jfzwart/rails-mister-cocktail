<div class="home-banner">
  <%= image_tag "homepage.jpg", alt: "Le Wagon", width: 800 %>
  <h1>Cocktail Bonanza</h1>
</div>

<ul>
  <% @cocktails.each do |cocktail| %>
  <li> <%= link_to cocktail.name, cocktail_path(cocktail) %> </li>
  <% end %>
</ul>

<%= link_to 'Add a new cocktail', new_cocktail_path(@cocktail) %>

<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>

<!-- for face detection -->
<%= cl_image_tag("IMAGE_WITH_FACE_ID",
      width: 150, height: 150, crop: :thumb, gravity: :face) %>
